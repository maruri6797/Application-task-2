<table class="table">
  <h2><%= @model %>s search for "<%= @word %>"</h2>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.tag, tagsearches_search_path(tag: book.tag) %></td>
        <td class="favorite-btn<%= book.id %>"><%= render 'favorites/favorite-btn', book: book %></td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <td><%= render "books/static.rate", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>