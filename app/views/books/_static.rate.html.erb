<div id="star_<%= book.id %>"></div>
<script>
  $(document).on('turbolinks:load', function(){
    let elem = document.querySelector('#star_<%=book.id %>');
    if (elem == null) return;

    elem.innerHTML = "";
    let opt = {
      size: '35',
      starOff: '<%= asset_path('star-off.png') %>',
      starOn: '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      score: '<%= book.score %>',
      readOnly: true,
      half: true
    };
    raty(elem, opt);
  });
</script>