<% @entries.each do |e| %>
  <% if @myUserId != e.user.id %>
    <h2><%= e.user.name %>さんとのチャット</h2>
  <% end %>
<% end %>

<% if @messages.present? %>
  <% @messages.each do |m| %>
    <p><%= m.user.name %></p>
    <p><%= m.message %></p>
  <% end %>
<% end %>

<%= form_for @message do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <i class="fa-regular fa-paper-plane"><%= f.submit "送信" %></i>
<% end %>

<%= link_to "ユーザー一覧に戻る", users_path %>
